{
  "name": "guidle",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:sdk\" \"npm run dev:demo\"",
    "dev:backend": "npm run dev -w apps/backend",
    "dev:sdk": "npm run dev -w @guidle/sdk",
    "dev:demo": "npm run dev -w demo-app",
    "build": "npm run build -w @guidle/sdk && npm run build -w apps/backend",
    "build:sdk": "npm run build -w @guidle/sdk"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}
